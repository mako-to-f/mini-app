<div class="container col-md-6 mt-3">
  <%= form_for article do |f| %>
    <div class="form-group">
      <%= f.label :content, "本文", for: "textarea1" %>
      <%= f.text_area :content, id: "textarea1", class: "form-control", rows: "5", autofocus: true %>
      <%= f.submit "送信", class: "btn btn-primary float-right mt-2"%>
    </div>
  <% end %>
</div>
